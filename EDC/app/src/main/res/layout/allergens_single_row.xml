<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="390dp"

    >




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rl1">

            <TextView
                android:id="@+id/about_alergens"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:background="@color/cardview_shadow_start_color"
                android:gravity="center"
                android:text="Nazwa"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/about_alergens"
                android:id="@+id/name_alergens"
                android:gravity="center"

                />


            <TextView
                android:layout_width="110dp"
                android:layout_height="90dp"
                android:id="@+id/showAllergenFactor"
                android:layout_below="@+id/about_alergens"
                android:background="@color/cardview_shadow_start_color"
                android:text="Czynnik alergiczny"
                android:textStyle="bold"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/dbAllergenFactor"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_below="@+id/name_alergens"
                android:gravity="center"
                android:layout_toRightOf="@+id/showAllergenFactor"
                app:drawableTint="#700C2E" />


            <TextView
                android:layout_width="110dp"
                android:layout_height="90dp"
                android:id="@+id/txtAllergenShows"
                android:layout_below="@+id/showAllergenFactor"
                android:background="@color/cardview_shadow_start_color"
                android:text="Kiedy występuje"
                android:textStyle="bold"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/dbAllergenShows"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_below="@+id/dbAllergenFactor"
                android:layout_marginLeft="-1dp"
                android:gravity="center"
                android:layout_marginTop="-1dp"
                android:layout_toRightOf="@+id/txtAllergenShows"
                app:drawableTint="#700C2E" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="90dp"
                android:id="@+id/AllergenHide"
                android:layout_below="@+id/txtAllergenShows"
                android:background="@color/cardview_shadow_start_color"
                android:text="Kiedy ustępuje"
                android:textStyle="bold"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/dbAllergenHide"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_below="@+id/dbAllergenShows"
                android:layout_toRightOf="@+id/txtAllergenShows"
                android:gravity="center"
                app:drawableTint="#700C2E" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="60dp"
                android:id="@+id/date_allergen"
                android:layout_below="@+id/dbAllergenHide"
                android:background="@color/cardview_shadow_start_color"
                android:text="Data rozpoznania"
                android:textStyle="bold"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/dbdate_allergen"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_below="@+id/dbAllergenHide"
                android:layout_toRightOf="@+id/txtAllergenShows"
                android:gravity="center"
                app:drawableTint="#700C2E" />


            <Button
                android:id="@+id/btn_del_allergen"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="USUN"
                android:layout_toRightOf="@+id/dbdate_allergen"
                android:layout_below="@+id/dbAllergenHide"
                android:layout_margin="5dp"
                android:layout_alignParentEnd="true"
                app:backgroundTint="#F44336" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_below="@+id/dbdate_allergen"
                android:background="@color/design_default_color_primary" />



        </RelativeLayout>






</androidx.cardview.widget.CardView>