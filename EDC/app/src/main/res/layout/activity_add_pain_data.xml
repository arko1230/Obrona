<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPainData">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl1"
        >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDiseaseName"
            android:textSize="25sp"
            android:text="Określenie miejsca bólu?"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />

        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/e_txtPainPlace"
            android:layout_below="@+id/txtDiseaseName"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="Np. Lewy bark"
            android:gravity="center"
            />


    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_Pain_level"
            android:textSize="25sp"
            android:text="Jak mocno?"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"

            />

        <EditText
            android:id="@+id/e_txtPain_level"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="numberDecimal"
            android:layout_below="@id/txt_Pain_level"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="80dp"
            android:hint="W skali 1 - 10 Np. 6,5"
            android:gravity="center"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/rl2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_Pain_metod"
            android:textSize="25sp"
            android:text="W jaki sposób?"
            android:layout_marginBottom="2dp"
            android:layout_centerHorizontal="true"

            />

        <EditText
            android:id="@+id/e_txt_Pain_metod"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/txt_Pain_metod"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="10dp"
            android:hint="Np. Ucisk, mrowienie"
            android:gravity="center"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl3"
        >

        <TextView
            android:id="@+id/txt_When_Pain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:layout_marginBottom="5dp"
            android:text="Kiedy" />

        <EditText
            android:id="@+id/e_txt_When_Pain"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/txt_When_Pain"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:hint="Np. 2 razy w tygodniu lub 28,27.02" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl4">

        <TextView
            android:id="@+id/txt_When_Pain_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:text="W jakiej sytuacji występuje"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/e_txt_When_Pain_start"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@id/txt_When_Pain_start"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="30dp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:hint="Np. Podczas odnoszenia dzieci" />



        <TextView
            android:id="@+id/txt_When_Pain_end"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="30dp"
            android:layout_below="@+id/e_txt_When_Pain_start"
            android:text="W jakiej sytuacji przechdzi?"
            android:gravity="center"
            android:textSize="25sp" />


        <EditText
            android:id="@+id/e_txt_When_Pain_end"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="30dp"
            android:layout_height="80dp"
            android:layout_below="@id/txt_When_Pain_end"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:hint="Np. Po chwili jak rozmasuje." />

        <Button
            android:layout_width="match_parent"
            android:layout_marginHorizontal="40dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:id="@+id/send_Pain"
            android:layout_below="@+id/e_txt_When_Pain_end"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:text="Zapisz informacje" />

    </RelativeLayout>






</RelativeLayout>