<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="355dp"

    >




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl1">

        <TextView
            android:id="@+id/txtFelt_what"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:background="@color/cardview_shadow_start_color"
            android:gravity="center"
            android:text="Opis"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/txtFelt_what"
            android:id="@+id/dbFeltWhat"
            android:gravity="center"

            />


        <TextView
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:id="@+id/txtFelt_scale"
            android:layout_below="@+id/txtFelt_what"
            android:background="@color/cardview_shadow_start_color"
            android:text="Skala"
            android:textStyle="bold"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/dbFeltScale"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/dbFeltWhat"
            android:gravity="center"
            android:layout_toRightOf="@+id/txtFelt_scale"
            app:drawableTint="#700C2E" />


        <TextView
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:id="@+id/txtFeltabout"
            android:layout_below="@+id/txtFelt_scale"
            android:background="@color/cardview_shadow_start_color"
            android:text="Opis"
            android:textStyle="bold"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/dbFeltAbout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/dbFeltScale"
            android:layout_marginLeft="-1dp"
            android:gravity="center"
            android:layout_marginTop="-1dp"
            android:layout_toRightOf="@+id/txtFeltabout"
            app:drawableTint="#700C2E" />

        <TextView
            android:layout_width="110dp"
            android:layout_height="65dp"
            android:id="@+id/txt_dbFeltDate"
            android:layout_below="@+id/txtFeltabout"
            android:background="@color/cardview_shadow_start_color"
            android:text="Data"
            android:textStyle="bold"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/dbFeltDate"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_below="@+id/dbFeltAbout"
            android:layout_toRightOf="@+id/txt_dbFeltDate"
            android:gravity="center"
            app:drawableTint="#700C2E" />




        <Button
            android:id="@+id/btn_del_felt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="USUN WPIS"
            android:layout_below="@+id/dbFeltDate"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"

            app:backgroundTint="#F44336" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/btn_del_felt"
            android:background="@color/design_default_color_primary" />



    </RelativeLayout>






</androidx.cardview.widget.CardView>