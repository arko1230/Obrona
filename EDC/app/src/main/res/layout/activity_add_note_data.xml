<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNoteData">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl1"
        android:layout_marginTop="20dp"
        >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtresult"
            android:textSize="25sp"
            android:text="Tytuł"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="20dp"
            android:gravity="center"
            android:id="@+id/etxt_title_note"
            android:layout_below="@+id/txtresult"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="Np. Kupić leki"



            />


    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/rl3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/temp_about"
            android:textSize="25sp"
            android:text="Treść"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"

            />

        <EditText
            android:id="@+id/e_txtabout_note"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/temp_about"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:gravity="center"
            android:hint="np. Tabletki na ból gardła, magnez i coś na kaszel "
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl3"
        android:layout_marginTop="25dp">

        <TextView
            android:id="@+id/txt_aboutdate_measure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:textSize="25sp"
            android:layout_marginBottom="10dp"
            android:text="Wybierz date notatki" />

        <Button
            android:id="@+id/btn_datepicker_note"
            android:layout_below="@+id/txt_aboutdate_measure"
            android:text="Wybierz datę"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="80dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            />


        <TextView
            android:id="@+id/txt_datechose_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:textSize="25sp"
            android:layout_below="@+id/btn_datepicker_note"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Wybrano date: "

            />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl4"
        android:layout_marginTop="-1dp">

        <Button
            android:layout_width="match_parent"
            android:layout_marginHorizontal="40dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:id="@+id/send_note"

            android:text="Zapisz informacje" />


    </RelativeLayout>


</RelativeLayout>