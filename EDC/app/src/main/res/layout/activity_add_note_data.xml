<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNoteData">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl1"
        android:layout_marginTop="20dp"
        >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtresult"
            android:textSize="16sp"
            android:text="Tytuł"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            />

        <EditText
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:id="@+id/etxt_title_note"
            android:layout_below="@+id/txtresult"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="Dodatkow informacje o badainiu"



            />


    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/rl3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/rl1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/temp_about"
            android:textSize="16sp"
            android:text="@string/about"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"

            />

        <EditText
            android:id="@+id/e_txtabout_note"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/temp_about"
            android:layout_marginTop="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="30dp"
            android:hint="np. Podczas migreny (godz. 16:15)"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl3"
        android:layout_marginTop="40dp">

        <TextView
            android:id="@+id/txt_aboutdate_measure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            android:text="Wybierz date pomiaru" />

        <Button
            android:id="@+id/btn_datepicker_note"
            android:layout_width="188dp"
            android:layout_height="62dp"
            android:layout_below="@+id/txt_aboutdate_measure"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="Wybierz datę"

            />


        <TextView
            android:id="@+id/txt_datechose_note"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_below="@+id/btn_datepicker_note"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Wybrano date: "

            />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl4"
        android:layout_marginTop="-1dp">

        <Button
            android:id="@+id/send_note"
            android:layout_width="234dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:text="Zapisz informacje" />


    </RelativeLayout>


</RelativeLayout>