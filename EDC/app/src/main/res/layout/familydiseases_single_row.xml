<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="4250dp"

    >




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl1">

        <TextView
            android:id="@+id/about_doctor"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:background="@color/cardview_shadow_start_color"
            android:gravity="center"
            android:text="Nazwa choroby"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/about_doctor"
            android:id="@+id/dbFamDisease_Name"
            android:gravity="center"
            android:textSize="17sp"


            />


        <TextView
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:id="@+id/DoctorType"
            android:layout_below="@+id/about_doctor"
            android:background="@color/cardview_shadow_start_color"
            android:text="WystÄ™powanie"
            android:textStyle="bold"
            android:gravity="center"

            />

        <TextView
            android:id="@+id/dbFamDisease_Who"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/dbFamDisease_Name"
            android:gravity="center"
            android:layout_toRightOf="@+id/DoctorType"
            android:textSize="17sp"

            app:drawableTint="#700C2E" />



        <TextView
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:id="@+id/Doctorabout"
            android:layout_below="@+id/DoctorType"
            android:background="@color/cardview_shadow_start_color"
            android:text="Przebieg"
            android:textStyle="bold"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/dbFamDisease_Progres"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/dbFamDisease_Who"
            android:gravity="center"
            android:layout_toRightOf="@+id/Doctorabout"
            android:textSize="17sp"

            app:drawableTint="#700C2E" />

        <TextView
            android:layout_width="110dp"
            android:layout_height="65dp"
            android:id="@+id/DoctorContakt"
            android:layout_below="@+id/Doctorabout"
            android:background="@color/cardview_shadow_start_color"
            android:text="Leczenie"
            android:textStyle="bold"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/dbFamDisease_Drugs"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_below="@+id/Doctorabout"
            android:layout_toRightOf="@+id/DoctorContakt"
            android:gravity="center"
            android:textSize="17sp"

            app:drawableTint="#700C2E" />



        <TextView
            android:layout_width="110dp"
            android:layout_height="65dp"
            android:id="@+id/MemberContakt"
            android:layout_below="@+id/DoctorContakt"
            android:background="@color/cardview_shadow_start_color"
            android:text="Dodatkowe informacje"
            android:textStyle="bold"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/dbFamDisease_ExtraInfo"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_below="@+id/dbFamDisease_Drugs"
            android:layout_toRightOf="@+id/DoctorContakt"
            android:gravity="center"
            android:textSize="17sp"

            app:drawableTint="#700C2E" />



        <Button
            android:id="@+id/btn_del_FamilyDisease"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="USUN WPIS"
            android:layout_below="@+id/dbFamDisease_ExtraInfo"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"

            app:backgroundTint="#F44336" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/btn_del_FamilyDisease"
            android:background="@color/purple_700" />



    </RelativeLayout>






</androidx.cardview.widget.CardView>