<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"

    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:id="@+id/rl1">

            <TextView
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:id="@+id/about_date_t"
                android:textStyle="bold"
                android:background="@color/cardview_shadow_start_color"
                android:text="@string/data" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="150dp"
                android:layout_below="@+id/about_date_t"
                android:id="@+id/date_t"
                android:padding="3dp"
                android:gravity="center"

                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="200dp">

            <TextView
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:text="Temperatura podana w Â°C"
                android:id="@+id/about_result_t"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@color/cardview_shadow_start_color"
                />
            <TextView
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:layout_below="@id/about_result_t"
                android:id="@+id/temperatureResult"
                android:gravity="center"
                android:padding="3dp"
                />



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/about"
                android:id="@+id/about_t"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@color/cardview_shadow_start_color"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/aboutTemperature"
                android:layout_below="@id/about_t"
                android:padding="3dp"
                android:gravity="center"
                />

            <Button
                android:id="@+id/btn_del_temperature"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_below="@+id/aboutTemperature"
                android:text="USUN"
                android:layout_centerInParent="true"
                android:padding="5dp"
                android:layout_margin="5dp"
                app:backgroundTint="#F44336" />




        </RelativeLayout>

        </LinearLayout>


</androidx.cardview.widget.CardView>