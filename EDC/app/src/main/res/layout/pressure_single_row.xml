<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="340dp"

    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="340dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="340dp"
            android:id="@+id/rl1">

            <TextView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:id="@+id/about_date_press"
                android:textStyle="bold"
                android:background="@color/cardview_shadow_start_color"
                android:text="@string/data" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_below="@+id/about_date_press"
                android:id="@+id/dbPressdate"
                android:padding="3dp"
                android:gravity="center"

                />

            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="CiÅ›nienie"
                android:layout_toRightOf="@+id/about_date_press"
                android:id="@+id/txt_pressResult"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@color/cardview_shadow_start_color"
                />
            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_below="@id/txt_pressResult"
                android:layout_toRightOf="@+id/dbPressdate"
                android:id="@+id/dbPessResult"
                android:gravity="center"
                android:padding="3dp"
                />

            <TextView
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/txt_pressResult"
                android:id="@+id/txtPressPuls"
                android:text="Puls"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@color/cardview_shadow_start_color"
                />

            <TextView
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_below="@+id/txtPressPuls"
                android:layout_toRightOf="@+id/dbPessResult"
                android:gravity="center"
                android:id="@+id/dbPressPuls"
                />




            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/about"
                android:layout_below="@+id/dbPressdate"
                android:id="@+id/about_s"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@color/cardview_shadow_start_color"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:id="@+id/dbaboutPress"
                android:layout_below="@id/about_s"
                android:padding="3dp"
                android:gravity="center"
                />

            <Button
                android:id="@+id/btn_del_press"
                android:layout_width="187dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dbaboutPress"
                android:layout_alignParentEnd="true"

                android:layout_centerInParent="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="17dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:text="USUN WPIS"
                app:backgroundTint="#F44336" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_below="@+id/btn_del_press"
                android:background="@color/design_default_color_primary" />


        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>