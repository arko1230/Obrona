<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddOxygenation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl1"
        android:layout_marginTop="25dp"
        >



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:id="@+id/txtresult"
            android:textSize="25sp"
            android:text="Wynik pomiaru % SpO2"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="60dp"
            android:id="@+id/result_etxt_oxygen"
            android:layout_below="@+id/txtresult"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="Np. 97%"
            android:gravity="center"



            />


    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/rl3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/rl1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/oxygen_about"
            android:textSize="25sp"
            android:text="@string/about"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"

            />

        <EditText
            android:id="@+id/e_txtabout_oxygen"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@id/oxygen_about"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="30dp"
            android:hint="Np. Podczas migreny (godz. 16:15)"
            android:gravity="center"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl3"
        android:layout_marginTop="25dp">

        <TextView
            android:id="@+id/txt_aboutdate_measure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="8dp"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:text="Wybierz date pomiaru" />

        <Button
            android:id="@+id/btn_datepicker_oxygen"
            android:layout_below="@+id/txt_aboutdate_measure"
            android:text="Wybierz datÄ™"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="80dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"




            />



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl4">

        <TextView
            android:id="@+id/txt_datechose_press"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_below="@+id/btn_datepicker_pressure"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Wybrano date: "
            android:gravity="center"
            />


        <Button
            android:layout_width="match_parent"
            android:layout_marginHorizontal="40dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:id="@+id/send_oxygen"


            android:text="Zapisz informacje" />


    </RelativeLayout>


</RelativeLayout>