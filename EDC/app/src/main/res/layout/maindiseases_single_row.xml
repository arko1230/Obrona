<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="425dp"

    >




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl1">

        <TextView
            android:id="@+id/about_doctor"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:background="@color/cardview_shadow_start_color"
            android:gravity="center"
            android:text="Nazwa choroby"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/about_doctor"
            android:id="@+id/dbDisease_Name"
            android:gravity="center"

            />


        <TextView
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:id="@+id/DoctorType"
            android:layout_below="@+id/about_doctor"
            android:background="@color/cardview_shadow_start_color"
            android:text="Czas przechorowania"
            android:textStyle="bold"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/dbTime_disease"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/dbDisease_Name"
            android:gravity="center"
            android:layout_toRightOf="@+id/DoctorType"
            app:drawableTint="#700C2E" />


        <TextView
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:id="@+id/Doctorabout"
            android:layout_below="@+id/DoctorType"
            android:background="@color/cardview_shadow_start_color"
            android:text="Czas leczenia w ośrodku"
            android:textStyle="bold"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/dbTimeRecovery"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/dbTime_disease"
            android:gravity="center"
            android:layout_toRightOf="@+id/Doctorabout"
            app:drawableTint="#700C2E" />

        <TextView
            android:layout_width="110dp"
            android:layout_height="65dp"
            android:id="@+id/DoctorContakt"
            android:layout_below="@+id/Doctorabout"
            android:background="@color/cardview_shadow_start_color"
            android:text="Objawy"
            android:textStyle="bold"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/dbSymptoms"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_below="@+id/Doctorabout"
            android:layout_toRightOf="@+id/DoctorContakt"
            android:gravity="center"
            app:drawableTint="#700C2E" />



        <TextView
            android:layout_width="110dp"
            android:layout_height="65dp"
            android:id="@+id/MemberContakt"
            android:layout_below="@+id/DoctorContakt"
            android:background="@color/cardview_shadow_start_color"
            android:text="Postępowanie"
            android:textStyle="bold"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/dbProcedure"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_below="@+id/dbSymptoms"
            android:layout_toRightOf="@+id/DoctorContakt"
            android:gravity="center"
            app:drawableTint="#700C2E" />



        <Button
            android:id="@+id/btn_del_Disease"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="USUN WPIS"
            android:layout_below="@+id/dbProcedure"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"

            app:backgroundTint="#F44336" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/btn_del_Disease"
            android:background="@color/design_default_color_primary" />



    </RelativeLayout>






</androidx.cardview.widget.CardView>